# ============ LLM API 配置 ============
# 阿里云 DashScope
DASHSCOPE_API_BASE=https://dashscope.aliyuncs.com/compatible-mode/v1
DASHSCOPE_API_KEY=<your-api-key>

# DeepSeek（可选）
DEEPSEEK_API_KEY=<your-api-key>

# ZAI（推荐用于子模型和报告生成）
ZAI_API_KEY=<your-api-key>

# Moonshot（可选）
MOONSHOT_API_KEY=<your-api-key>

# SiliconFlow（可选）
SILICONFLOW_API_BASE=https://api.siliconflow.cn
SILICONFLOW_API_KEY=<your-api-key>

# Tavily 搜索 API
TAVILIY_API_KEY=<your-api-key>

# ============ FastAPI 配置 ============
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1
LOG_LEVEL=info

# ============ JWT 认证配置 ============
# 生产环境必须修改为随机字符串（使用：python -c "import secrets; print(secrets.token_urlsafe(32))"）
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============ 数据库配置 (PostgreSQL) ============
# 格式: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/pet_food
DATABASE_ECHO=false

# ============ Redis 配置 ============
# 格式: redis://[:password@]host:port/database
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# ============ CORS 配置 ============
# 开发环境使用本地地址，生产环境使用实际域名
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# ============ 安全配置 ============
# 生产环境必须修改为随机字符串
SECRET_KEY=your-super-secret-key-change-this-in-production
ALLOWED_HOSTS=["*"]
MAX_REQUEST_SIZE=10485760  # 10MB

# ============ 任务配置 ============
TASK_TIMEOUT_SECONDS=3600  # 1小时
TASK_MAX_CONCURRENT=5

# ============ 速率限制配置 ============
RATE_LIMIT_ENABLED=true
RATE_LIMIT_TIMES=100
RATE_LIMIT_SECONDS=60

# ============ 邮件配置 ============
# QQ 邮箱配置示例
SMTP_HOST=smtp.qq.com
SMTP_PORT=587
SMTP_USERNAME=your_email@qq.com
SMTP_PASSWORD=your_authorization_code
SMTP_FROM_EMAIL=your_email@qq.com
SMTP_USE_TLS=true

# Gmail 邮箱配置示例
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM_EMAIL=your_email@gmail.com
# SMTP_USE_TLS=true

# 获取邮箱授权码：
# - QQ 邮箱: 设置 → 账户 → POP3/IMAP/SMTP/Exchange/CardDAV/CalDAV服务 → 生成授权码
# - Gmail: 账户 → 安全 → 两步验证 → 应用专用密码 → 生成

# ============ 验证码配置 ============
VERIFICATION_CODE_LENGTH=6
VERIFICATION_CODE_EXPIRE_MINUTES=10
VERIFICATION_CODE_MAX_ATTEMPTS=3
VERIFICATION_CODE_COOLDOWN_SECONDS=60
VERIFICATION_CODE_MAX_DAILY_SENDS=10
